<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="414dp"
        android:layout_height="185dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/icono" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="REGISTRO DE USUARIO"
            android:textColor="@color/gris"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="345dp"
        android:layout_height="410dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="33dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <EditText
            android:id="@+id/idUsuario"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:background="@color/blanco"
            android:hint="Num. Documento"
            android:paddingLeft="5dp"
            android:textColor="@color/gris" />

        <EditText
            android:id="@+id/inpNombres"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/blanco"
            android:hint="Nombres"
            android:paddingLeft="5dp"
            android:textColor="@color/gris" />

        <EditText
            android:id="@+id/inpApellidos"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/blanco"
            android:hint="Apellidos"
            android:paddingLeft="5dp"
            android:textColor="@color/gris" />

        <EditText
            android:id="@+id/inpCorreo"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/blanco"
            android:hint="Correo Electr칩nico"
            android:paddingLeft="5dp"
            android:textColor="@color/gris" />

        <EditText
            android:id="@+id/inpMedico"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/blanco"
            android:hint="Medico encargado"
            android:paddingLeft="5dp"
            android:textColor="@color/gris" />

        <EditText
            android:id="@+id/inpDiagnostico"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/blanco"
            android:hint="Diagn칩stico"
            android:paddingLeft="5dp"
            android:textColor="@color/gris" />
        <EditText
            android:id="@+id/inpContrasena"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/blanco"
            android:hint="Contrase침a"
            android:paddingLeft="5dp"
            android:textColor="@color/gris" />

        <EditText
            android:id="@+id/inpContrasena2"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/blanco"
            android:hint="Confirma tu contrase침a"
            android:paddingLeft="5dp"
            android:textColor="@color/gris" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="75dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/btn_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textSize="16dp"
            android:backgroundTint="@color/azul"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>