<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formula">


    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="411dp"
        android:layout_height="320dp"
        android:layout_marginBottom="411dp"
        android:background="@drawable/imgform"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="412dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Solicita aquí tu medicamento"
            android:textColor="@color/gris"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Gracias a la nueva actualización de Samein FARM podrás reclamar la formula de tus medicamentos de forma más rapida y eficiente"
            android:textColor="@color/azul"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/inp_medicamento"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="60dp"
            android:background="@color/white"
            android:paddingLeft="8dp"
            android:hint="Codigo del medicamento a solicitar" />

        <Button
            android:id="@+id/btn_solicitar"
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="100dp"
            android:text="Solicitar"
            android:backgroundTint="@color/gris"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>